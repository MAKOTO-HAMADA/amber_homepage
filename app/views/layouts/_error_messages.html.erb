<div class="text-white font-weight-bold bg-info mb-5">
    
    <% if resource.errors.any? %>
        <div class="alert error_explanation py-3">
            <%= alert %><button type="button" class="close text-white" data-dismiss="alert">&times;</button>
            <h2 class="text-center">
                <%= I18n.t("errors.messages.not_saved",
                count: resource.errors.count,
                resource: resource.class.model_name.human.downcase) %>
            </h2>
            <ul class="ml-5 pl-5">
                <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
</div>