<div class="container">
    
    <!-- タイトル -->
    <div class="row mb-5">
      <div class="display-3 font-weight-bold text-warning">商品情報の編集</div>
    </div>
    
    <!-- 確認用 テーブル -->
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <div class="row mb-5">
        <table class="table table-striped">
            <tr>
              <th>商品画像</th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area  :introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.select :item_genre_id, @item_genres %></td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price %></td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <div class="row ml-1">
                  <div class="input-group-text">
                    <%= f.radio_button :sales_status, true %>
                  </div>
                  <%= f.label "販売中", class: 'col-form-label col-2' %>
                  <div class="input-group-text">
                    <%= f.radio_button :sales_status, false %>
                  </div>
                  <%= f.label "販売停止中", class: 'col-form-label col-2' %>
                </div>
              </td>
            </tr>
          
        </table>
      </div>
      
      <!-- 保存ボタン -->
      <div class="row mb-5 d-flex justify-content-center">
        <%= f.submit '変更を保存', class: 'btn btn-danger btn-lg rounded-pill' %>
      </div>
    <% end %>
</div>