<div class="container">
    
    <!-- タイトル -->
    <div class="row mb-5 justify-content-center">
        <div class="display-3 font-weight-bold text-warning">問合せジャンルの一覧・追加</div>
    </div>
  
    <div class="container">
        <div class="row mb-5 justify-content-center">
            
            <!-- 左辺 -->
            <div class="col-4">
                <%= form_with model: @contact_genre, url: admin_contact_genres_path do |f| %>
                    <p class="h3  mb-4">新規登録</p>
                    <div class="row mb-4">
                        <%= f.label :name, "ジャンル名", class: 'col-5 col-form-label' %>
                        <%= f.text_field :name, class: 'col-6 form-control' %>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <%= f.submit "新規登録", class: 'btn btn-danger btn-lg rounded-pill' %>
                    </div>
                <% end %>
            </div>
            
            <!-- 右辺 -->
            <div class="col-8">
                <p class="h3  mb-4">ジャンル一覧</p>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ジャンルＩＤ</th>
                            <th>ジャンル名</th>
                            <th width="15%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @contact_genres.each do |genre| %>
                            <tr>
                                <td><%= genre.id %></td>
                                <td><%= genre.name %></td>
                                <td class="text-center">
                                    <%= link_to "編集", edit_admin_contact_genre_path(genre.id), class: 'btn btn-secondary' %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    
</div>