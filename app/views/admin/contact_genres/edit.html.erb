<div class="container">
    
  <!-- タイトル -->
  <div class="row mb-5 justify-content-center">
    <div class="display-3 font-weight-bold text-warning">問合せジャンルの編集</div>
  </div>
  
  <!-- エラーメッセージ(部分プレート) -->
  <%= render 'layouts/error_messages', resource: @contact_genre %>
  
  <!-- 編集フォーム -->
  <div class="container">
    <div class="row mb-5 justify-content-center">
        
      <div class="col-8">
        <%= form_with model: @contact_genre, url: admin_contact_genre_path(@contact_genre.id), method: :patch do |f| %>
          <div class="row mb-4">
            <%= f.label :name, "ジャンル名", class: 'col-5 col-form-label' %>
            <%= f.text_field :name, class: 'col-6 form-control' %>
          </div>
          <div class="row d-flex justify-content-center">
            <%= f.submit "変更を保存", class: 'btn btn-danger btn-lg rounded-pill' %>
          </div>
        <% end %>
      </div>
        
    </div>
  </div>
    
</div>