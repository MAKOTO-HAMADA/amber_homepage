<div class="container">
    
    <div class="row mb-3 display-3 font-weight-bold">Search Items</div>
    
    <div class="row mb-5">
        
        <!-- 左_ジャンル検索作成予定 -->
        <div class="col-lg-2 d-none d-lg-block">
            <%= render "layouts/sidebar", item_genres: @item_genres %>
        </div>
        
        <!-- 右_商品一覧-->
        <div class="col-lg-10 col-12">
            <% if @q.name_cont != nil %>
              <div class="h3 font-weight-bold mb-3"><%= "[ #{@q.name_cont} ] の検索結果" %></div>
              <div class="row">
                <% @items.each do |item| %>
                    <div class="col-md-6 col-lg-4 mb-5">
                        <%= link_to item_path(item.id), class: 'card shadow' do %>
                            <%= image_tag item.image, class: 'autosizing-image img-fluid rounded-top' %>
                            <div class="card-body text-white bg-dark">
                                <p class="card-title h4"><%= item.name %></p>
                                <p class="card-text h6">¥<%= item.add_tax_price %></p>
                            </div>
                        <% end %>
                    </div>
                <% end %>
              </div>  
            <% else %>
              <div class="h3 font-weight-bold mb-3"><%= "文字を入力してください" %></div>
            <% end %>
        </div>
        
    </div>
</div>